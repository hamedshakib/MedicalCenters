{
    "Urls": "http://0.0.0.0:23412;https://0.0.0.0:23413",
    "ConnectionStrings": {
        "MedicalCentersConnectionString": "Server=host.docker.internal;Database=MedicalCenters;User Id=csd;password=;Trusted_Connection=False;MultipleActiveResultSets=true;TrustServerCertificate=True",
        "IdentityConnectionString": "Server=host.docker.internal;Database=Identity;User Id=csd;password=;Trusted_Connection=False;MultipleActiveResultSets=true;TrustServerCertificate=True",
        "RedisConnectionString": "redis:6379"
        //,"LeaveManagementIdentityConnectionString": "Server=(localdb)\\MSSQLLocalDB;Database=hr_leavemanagement_identity_db;Trusted_Connection=True;"
